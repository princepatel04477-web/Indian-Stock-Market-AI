# Environment Variables for Indian Stock AI
# Copy this file to .env and fill in your values

# =============================================================================
# API Keys - Data Sources
# =============================================================================

# Alpha Vantage (free tier available)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key

# Quandl / Nasdaq Data Link
QUANDL_API_KEY=your_quandl_key

# TrueData (paid Indian market data vendor)
TRUEDATA_USERNAME=your_username
TRUEDATA_PASSWORD=your_password

# GlobalDataFeeds (alternative vendor)
GDF_API_KEY=your_gdf_key

# =============================================================================
# Database Configuration
# =============================================================================

# TimescaleDB (for production)
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5432
TIMESCALE_DB=indian_stocks
TIMESCALE_USER=postgres
TIMESCALE_PASSWORD=your_secure_password

# Redis (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# LLM Configuration
# =============================================================================

# Hugging Face (for model downloads)
HUGGINGFACE_TOKEN=your_hf_token

# Ollama
OLLAMA_HOST=http://localhost:11434

# =============================================================================
# API Configuration
# =============================================================================

# Secret key for JWT tokens (generate a secure random string)
SECRET_KEY=your-super-secret-key-change-this-in-production

# Debug mode
DEBUG=false

# =============================================================================
# Monitoring
# =============================================================================

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_grafana_password

# =============================================================================
# Cloud/Deployment (optional)
# =============================================================================

# AWS
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-south-1

# GCP
GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# Azure
AZURE_STORAGE_CONNECTION_STRING=
